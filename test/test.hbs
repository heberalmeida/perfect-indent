{{!-- Handlebars - Mal indentado propositalmente --}}
<!DOCTYPE html>
<html>
<head>
<title>{{title}}</title>
</head>
<body>
<div class="container">
<h1>{{title}}</h1>
{{#if users}}
<ul>
{{#each users}}
<li>
{{name}}
{{#if isAdmin}}
<span class="badge">Admin</span>
{{/if}}
</li>
{{/each}}
</ul>
{{else}}
<p>No users found.</p>
{{/if}}
{{#if currentUser}}
<button>Click me</button>
{{/if}}
</div>
</body>
</html>

