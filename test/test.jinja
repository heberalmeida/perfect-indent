{% extends "base.html" %}
{% block content %}
<div class="container">
<h1>{{ title }}</h1>
{% if users|length > 0 %}
<ul>
{% for user in users %}
<li>
{{ user.name }}
{% if user.is_admin %}
<span class="badge">Admin</span>
{% endif %}
</li>
{% endfor %}
</ul>
{% else %}
<p>No users found.</p>
{% endif %}
{% if current_user %}
<button>Click me</button>
{% endif %}
</div>
{% endblock %}

