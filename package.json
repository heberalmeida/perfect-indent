{
  "name": "perfect-indent",
  "displayName": "Perfect Indent",
  "description": "Fix broken indentation automatically in any language. A smarter auto-indent for VS Code.",
  "version": "0.0.1",
  "icon": "src/image/perfect-indent.png",
  "publisher": "heberalmeida",
  "repository": {
    "type": "git",
    "url": "https://github.com/heberalmeida/perfect-indent.git"
  },
  "engines": { "vscode": "^1.70.0" },
  "categories": ["Formatters"],
  "activationEvents": ["onCommand:perfectIndent.fix"],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      { 
        "command": "perfectIndent.fix", 
        "title": "Perfect Indent",
        "icon": "$(indent)"
      }
    ],
    "keybindings": [
      {
        "command": "perfectIndent.fix",
        "key": "ctrl+shift+i",
        "mac": "cmd+shift+i"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "perfectIndent.fix",
          "when": "!editorReadonly",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "perfectIndent.fix",
          "when": "editorTextFocus",
          "group": "1_modification"
        }
      ],
      "explorer/context": [
        {
          "command": "perfectIndent.fix",
          "when": "explorerResourceIsFolder == false",
          "group": "navigation@1"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.70.0",
    "typescript": "^4.7.4",
    "tslib": "^2.4.0"
  }
}
