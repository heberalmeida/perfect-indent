{
  "name": "perfect-indent",
  "displayName": "Perfect Indent",
  "description": "Fix broken indentation automatically in any language. A smarter auto-indent for VS Code.",
  "version": "0.0.1",
  "publisher": "heberalmeida",
  "engines": { "vscode": "^1.70.0" },
  "categories": ["Formatters"],
  "activationEvents": ["onCommand:perfectIndent.fix"],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      { "command": "perfectIndent.fix", "title": "Perfect Indent: Fix indentation" }
    ],
    "keybindings": [
      {
        "command": "perfectIndent.fix",
        "key": "ctrl+shift+i",
        "mac": "cmd+shift+i",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.70.0",
    "typescript": "^4.7.4",
    "tslib": "^2.4.0"
  }
}
